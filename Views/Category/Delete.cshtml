@model NimapInfotech.Models.Category
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Category ?</h1>

<form asp-action="Delete">
    <table class="table">
        <tr>
            <td></td>
            <td>@Html.HiddenFor(Model=>Model.CategoryID)</td>
        </tr>
        <tr>
            <td>Category Name</td>
            <td>@Model.CategoryName</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Delete Product" class="btn-primary btn-danger text-center" />

            </td>
        </tr>

    </table>
</form>